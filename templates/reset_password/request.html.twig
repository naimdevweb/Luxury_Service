{% extends 'base.html.twig' %}
{% block body %}
    <section class="section-padding gray-bg log-section" style="display: flex; justify-content: center; align-items: center; padding-top: 200px;">
        <div class="container">
            <div class="row" style="display: flex; justify-content: center; align-items: center;">
                <div class="col-xs-12 col-sm-6 col-md-4">
                    <div class="card card-panel">
                        <h3 class="text-extrabold">Reset your password</h3>
                        {{ form_start(requestForm) }}
                            <div class="input-field">
                                {{ form_widget(requestForm.email) }}
                                {{ form_label(requestForm.email) }}
                                {{ form_errors(requestForm.email) }}
                            </div>
                            <button type="submit" class="btn btn-lg gradient secondary btn-block waves-effect waves-light mt-20 mb-20">Send reset link</button>
                        {{ form_end(requestForm) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}